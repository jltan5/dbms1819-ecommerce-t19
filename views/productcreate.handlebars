<h1 class="mt-0 mb-5 text-center">{{title}}</h1>
<center>
<form action="/" method="POST">
  Product name:
  <input type="text" name="product_name" required=""><br>
  Product description:
  <input type="text" name="product_description"><br>
  Product tagline:
  <input type="text" name="product_tagline" required=""><br>
  Product price:
  <input type="text" name="product_price" required=""><br>
  Product warranty:
  <input type="text" name="product_warranty" required=""><br>
  Product category:
  <select name="category_id" class="form" required="">
			<option value="">Pick a Category</option>
			{{#each data}}
			<option value="{{this.id}}">{{this.name}}</option>
			{{/each}}
	</select><br>
	Product brand:
	<select name="brand_id" class="form" required="">
			<option value=''>Pick a Brand</option>
			{{#each data2}}
			<option value='{{this.id}}'>{{this.name}}</option>
			{{/each}}
	</select>
  <input type="submit" value="Submit">
</form> 
</center>