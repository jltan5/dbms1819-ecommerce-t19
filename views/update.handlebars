<h1 class="p-5 mt-0 mb-1 text-center">{{title}}</h1>
<center>
  {{#each products}}
<form action="/products/{{this.id}}" method="POST">
  <table>
    <tr><td>
  Product id:</td><td>
  <input type="text" readonly="" name="product_id" value="{{this.id}}"></td></tr>
  {{/each}}
 
 <tr><td>
  Product name:  </td><td>
  <input type="text" name="product_name" required=""></td></tr>
 <tr><td> Product description: </td><td>
  <input type="text" name="product_description"></td></tr>
 <tr><td>Product tagline: </td><td>
  <input type="text" name="product_tagline"></td></tr>
 <tr><td> Product price: </td><td>
  <input type="text" name="product_price" required=""></td></tr>
 <tr><td> Product warranty: </td><td>
  <input type="text" name="product_warranty"></td></tr>
 <tr><td> Product category: </td><td>
  <select name="category_id" class="form" required="">
      <option value="">Pick a Category</option>
      {{#each category}}
      <option value="{{this.id}}">{{this.category_name}}</option>
      {{/each}}
     </select></td></tr>
 <tr><td> Product brand: </td><td>
     <select name="brand_id" class="form" required="">
     <option value=''>Pick a Brand</option>
      {{#each brands}}
      <option value='{{this.id}}'>{{this.brand_name}}</option>
      {{/each}}
  </select></td></tr>
 <tr><td> Image Link:</td><td>
  <input type="text" name="image_link"></td></tr>
</table>
<br><br>
  <input type="submit" value="UPDATE">
</form> 
