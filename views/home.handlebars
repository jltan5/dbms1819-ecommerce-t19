	<div>
		<h1 class="mt-0 mb-5 text-center">{{title}}</h1>
		<div class="row mx-4">
			{{#each data}}
			<div class="col-lg-4 col-md-4 col-sm-12 mb-4 mx-auto">
				<div class="" align="text-center">
					<a href="/products/{{this.id}}" class="text-light">
					<img src="{{this.image}}" width="300" height="200" border="0">
							<font color="Black"></font><h7>{{this.name}}</h7>
				</div>
			</div>
			{{/each}}
		</div>
	</div>
